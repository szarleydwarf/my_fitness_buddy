<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.GSignIn">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/border"
        android:id="@+id/gsign_status_text"
        android:textSize="@dimen/text_28"
        android:textColor="@color/white"
        android:text="Signiing you into your Google account, please wait"
        />
    <!--todo cancel button and some animation??-->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cnacel_btn"
        android:text="@string/cancel"
        android:background="@drawable/b_w_box"
        android:layout_margin="@dimen/m_p_5dp"
        />

</LinearLayout>