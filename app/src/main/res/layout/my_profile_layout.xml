<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"

        >
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >
            <ImageView
                android:id="@+id/background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/profile_circle"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/m_p_20dp"
                />
            <ImageView
                android:id="@+id/photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/background"
                android:layout_alignBottom="@id/background"
                android:layout_alignLeft="@id/background"
                android:layout_alignRight="@id/background"
                android:scaleType="fitXY"
                android:src="@drawable/default_profile"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/m_p_5dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/hline"
                android:layout_margin="@dimen/m_p_20dp"
                />
            <!--user name editview-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/m_p_5dp"
                android:layout_margin="@dimen/m_p_20dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/user_nick"
                    android:text="@string/default_user_nick"
                    android:layout_weight="1"
                />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nick_name_edit"
                    android:text="@string/edit"
                    android:background="@drawable/border"
                    android:layout_weight="1"
                />
            </LinearLayout>

            <!--email editview-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/m_p_5dp"
                android:layout_margin="@dimen/m_p_20dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/user_email"
                    android:text="@string/default_user_nick"
                    android:layout_weight="1"
                />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/email_edit"
                    android:text="@string/edit"
                    android:background="@drawable/border"
                    android:layout_weight="1"
                />
            </LinearLayout>
            <!--password editview-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/m_p_5dp"
                android:layout_margin="@dimen/m_p_20dp"
                >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/password_edit"
                    android:text="@string/edit_password"
                    android:background="@drawable/border"
                    android:layout_weight="1"
                />
            </LinearLayout>
            <!--LogOut button editview-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/m_p_5dp"
                android:layout_margin="@dimen/m_p_20dp"
                >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/signout_btn"
                    android:text="@string/signout"
                    android:background="@drawable/border"
                    android:layout_weight="1"
                />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</ScrollView>